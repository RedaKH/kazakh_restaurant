<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <header>
            <nav class="navbar" role="navigation" aria-label="dropdown navigation">
                <div class="navbar-start">
                    <img src="{{ asset('assets/logo/logo.png') }}" style="max-height: 70px;" alt="logo" srcset="">
    
                </div>
                <div class="navbar-end">
    
                    <a href="{{ path('index') }}" class="navbar-item">
                        Accueil
                    </a>
    
                    <a href="{{ path('menus') }}" class="navbar-item">
                        Menus
                    </a>
                    <a href="{{ path('blogs') }}" class="navbar-item">
                        Blog
                    </a>
    
                    <a href="{{ path('reservations') }}" class="navbar-item">
                        Reservations
                    </a>
                    
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            Langues
                        </a>
    
                        <div class="navbar-dropdown">
                            <a class="navbar-item" href="{{ path('set_locale', { 'locale': 'fr' }) }}">
                                Francais
                            </a>
                            <a class="navbar-item" href="{{ path('set_locale', { 'locale': 'en' }) }}">
                                English
                            </a>
                            <a class="navbar-item" href="{{ path('set_locale', { 'locale': 'kk' }) }}">
                                қазақша
                            </a>
                        </div>
                    </div>
            </nav>
    
    
        </header>
        
        
        {% endblock %}
    </body>
</html>
