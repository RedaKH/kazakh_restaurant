{% extends 'base.html.twig' %}

{% block title %}Ajouter un Blog{% endblock %}

{% block body %}

    {{ form_start(form, {'attr': {'class': 'box'}}) }}

    <div class="field">
        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'label'}}) }}
        <div class="control">
            {{ form_widget(form.title, {'attr': {'class': 'input'}}) }}
        </div>
    </div>

    <div class="field">
        {{ form_label(form.image, 'Image', {'label_attr': {'class': 'label'}}) }}
        <div class="control">
            {{ form_widget(form.image, {'attr': {'class': 'input'}}) }}
        </div>
    </div>

    <div class="field">
        {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'label'}}) }}
        <div class="control">
            {{ form_widget(form.content, {'attr': {'class': 'textarea tinymce'}}) }}
        </div>
    </div>

    <div class="control">
        {{ form_widget(form.save, {'attr': {'class': 'button is-link'}}) }}
    </div>

    {{ form_end(form) }}
{% endblock %}
